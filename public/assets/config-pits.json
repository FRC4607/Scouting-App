{
  "heading": "Pit Scouting",
  "logo": "CHARGED_UP_Logo_Horiz_RGB_FullColorReverse.png",
  "skipTeamSelection": true,
  "pages": [
    {
      "name": "Robot",
      "widgets": [
        {
          "name": "Scouter Name",
          "type": "text"
        },
        {
          "name": "Team Number",
          "type": "number"
        },
        {
          "name": "Drivetrain Type",
          "type": "dropdown",
          "options": [
            "Tank Drive",
            "Mecanum",
            "Swerve",
            "Other"
          ]
        },
        {
          "name": "Frame Width",
          "type": "number",
          "min": 20,
          "max": 40
        },
        {
          "name": "Frame Length",
          "type": "number",
          "min": 20,
          "max": 40
        },
        {
          "name": "Weight",
          "type": "number",
          "min": 50,
          "max": 150
        },
        {
          "type": "spacer",
          "height": 20
        },
        {
          "name": "Bumper Height",
          "type": "number"
        },
        {
          "name": "Bumper Depth",
          "type": "number"
        },
        {
          "name": "Bumper Mounting Configuration",
          "type": "text"
        }
      ]
    },
    {
      "name": "Gameplay and Programing",
      "widgets": [
        {
          "name": "Programing Language",
          "type": "dropdown",
          "options": [
            "Java",
            "C++",
            "Python",
            "Labview"
          ]
        },
        {
          "name": "Mobility Capable",
          "type": "checkbox"
        },
        {
          "name": "Preferred Play Style",
          "type": "dropdown",
          "options": [
            "Defense",
            "Offense",
            "Runner"
          ]
        }
      ]
    },
    {
      "name": "Processes",
      "widgets": [
        {
          "name": "Number of Batteries",
          "type": "number"
        },
        {
          "name": "Battery Maintenance",
          "type": "checkbox"
        },
        {
          "name": "Battery Maintenance_text",
          "noLabel": "true",
          "type": "text",
          "col": 2
        },
        {
          "name": "Pit Checklist",
          "type": "checkbox"
        },
        {
          "name": "Scouting",
          "type": "checkbox"
        }
      ]
    },
    {
      "name": "Pictures and Comments",
      "widgets": [
        {
          "name": "Note: You can take multiple pictures/videos!",
          "type": "label",
          "colspan": 2,
          "labelColspan": 2
        },
        {
          "name": "space",
          "type": "spacer"
        },
        {
          "name": "Battery Area",
          "type": "pictureupload"
        },
        {
          "name": "Robot Close Ups",
          "type": "pictureupload"
        },
        {
          "name": "space",
          "type": "spacer"
        },
        {
          "name": "Comments",
          "type": "label"
        },
        {
          "name": "Comments",
          "type": "textarea",
          "colspan": 2
        }
      ]
    }
  ]
}