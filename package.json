{
  "name": "cis-scouting",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vite preview --host",
    "build-static": "vite build",
    "lint": "eslint --ext .js,.ts,.vue --ignore-path .gitignore --fix src",
    "checkUpdates": "ncu -u",
    "dev": "vite --host",
    "installModules": "npm install",
    "installBackendModules": "npm run installModules --prefix backend",
    "installAll": "npm run installModules && npm run installBackendModules",
    "build-backend": "npm run build --prefix backend",
    "build": "npm run build-static && npm run build-backend && rm -rf build/* && mkdir -p build/static && cp -r backend/build/* backend/mysql-config.json backend/node_modules build && cp -r dist/* build/static/ && echo full build complete! && echo",
    "build-windows": "npm run build-static && npm run build-backend && echo backend build complete! && powershell -Executionpolicy RemoteSigned -noprofile -noninteractive \"new-item -Path build/ -Name static -ItemType directory -Force | Out-Null\" && powershell copy-item backend/build/*,backend/mysql-config.json,backend/node_modules -Destination build -recurse -Force && powershell copy-item -Path dist/* -Destination build/static/ -recurse -Force && echo full build complete! && echo:",
    "run": "cd build && node main.js",
    "run-pm2": "pm2 start build/main.js --name cis-scouting --attach",
    "docker-build": "docker build -t beckerrobotics/scouting-app .",
    "docker-run": "docker run -p 4173:4173 -d beckerrobotics/scouting-app",
    "docker-push": "docker push beckerrobotics/scouting-app",
    "docker-deploy": "echo HEADS UP! && echo This requires that you are logged into the robotics DockerHub account within the terminal && echo Run 'docker login' to login && npm run docker-build && npm run docker-push"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.4.0",
    "@fortawesome/free-brands-svg-icons": "^6.4.0",
    "@fortawesome/free-regular-svg-icons": "^6.4.0",
    "@fortawesome/free-solid-svg-icons": "^6.4.0",
    "@fortawesome/vue-fontawesome": "^3.0.3",
    "@types/lodash": "^4.14.195",
    "@types/node": "20.3.0",
    "@vueuse/core": "^10.1.2",
    "buffer": "^6.0.3",
    "pinia": "^2.1.3",
    "qrcode.vue": "^3.4.0",
    "register-service-worker": "^1.7.2",
    "vue": "^3.3.4",
    "vue-qrcode-reader": "^3.1.6",
    "vue-router": "^4.2.2",
    "webdav": "^5.3.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/cli-plugin-pwa": "~5.0.8",
    "@vue/eslint-config-typescript": "^11.0.3",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.42.0",
    "eslint-plugin-vue": "^9.14.1",
    "npm-check-updates": "^16.10.12",
    "pm2": "^5.3.0",
    "postcss": "^8.4.24",
    "postcss-nested": "^6.0.1",
    "typescript": "~5.1.3",
    "vite": "^4.3.9",
    "vite-plugin-pwa": "^0.16.3"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@vue/typescript/recommended",
      "eslint:recommended",
      "plugin:vue/vue3-essential"
    ],
    "globals": {
      "$$": "readonly",
      "$": "readonly",
      "$computed": "readonly",
      "$customRef": "readonly",
      "$ref": "readonly",
      "$shallowRef": "readonly",
      "$toRef": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": "latest"
    },
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error",
      "no-console": "warn",
      "no-debugger": "warn",
      "quotes": [
        "warn",
        "double",
        {
          "avoidEscape": true
        }
      ]
    }
  },
  "type": "module"
}
