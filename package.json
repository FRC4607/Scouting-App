{
  "name": "cis-scouting",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vite preview --host",
    "build": "vite build",
    "lint": "eslint --ext .js,.ts,.vue --ignore-path .gitignore --fix src",
    "checkUpdates": "ncu -u",
    "dev": "vite --host",
    "installModules": "npm install",
    "docker-build": "docker build -t beckerrobotics/scouting-app .",
    "docker-run": "docker run -p 4173:4173 -d beckerrobotics/scouting-app",
    "docker-push": "docker push beckerrobotics/scouting-app",
    "docker-deploy": "echo HEADS UP! && echo This requires that you are logged into the robotics DockerHub account within the terminal && echo Run 'docker login' to login && npm run docker-build && npm run docker-push"
  },
  "dependencies": {
    "@types/lodash": "^4.14.191",
    "@types/node": "18.11.18",
    "@vueuse/core": "^9.9.0",
    "pinia": "^2.0.28",
    "qrcode.vue": "^3.3.3",
    "register-service-worker": "^1.7.2",
    "vue": "^3.2.45",
    "vue-qrcode-reader": "^3.1.0",
    "vue-router": "^4.1.6"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue/cli-plugin-pwa": "~5.0.8",
    "@vue/eslint-config-typescript": "^11.0.2",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.30.0",
    "eslint-plugin-vue": "^9.8.0",
    "npm-check-updates": "^16.6.2",
    "postcss": "^8.4.20",
    "postcss-nested": "^6.0.0",
    "typescript": "~4.9.4",
    "vite": "^4.0.3",
    "vite-plugin-pwa": "^0.14.0"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@vue/typescript/recommended",
      "eslint:recommended",
      "plugin:vue/vue3-essential"
    ],
    "globals": {
      "$$": "readonly",
      "$": "readonly",
      "$computed": "readonly",
      "$customRef": "readonly",
      "$ref": "readonly",
      "$shallowRef": "readonly",
      "$toRef": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": "latest"
    },
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error",
      "no-console": "warn",
      "no-debugger": "warn",
      "quotes": [
        "warn",
        "double",
        {
          "avoidEscape": true
        }
      ]
    }
  },
  "type": "module"
}
